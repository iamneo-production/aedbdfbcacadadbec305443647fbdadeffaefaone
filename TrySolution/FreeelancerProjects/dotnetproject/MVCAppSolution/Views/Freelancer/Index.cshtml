@model IEnumerable<BookStoreApp.Models.Freelancer>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Freelancer Id</th>
                <th>Freelancer Name</th>
                <th>Specialization</th>
                <th>Commercial Per Hour</th>
                <th>MailID</th>
                <th>ContactNumber</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Freelancer freelancer in Model)
            {
                <tr>
                    <td>@freelancer.FreelancerID</td>
                    <td>@freelancer.FreelancerName</td>
                    <td>@freelancer.Specialization</td>
                    <td>@freelancer.CommercialPerHour</td>
                     <td>@freelancer.MailID</td>
                      <td>@freelancer.ContactNumber</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@freelancer.FreelancerID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Freelancers found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">