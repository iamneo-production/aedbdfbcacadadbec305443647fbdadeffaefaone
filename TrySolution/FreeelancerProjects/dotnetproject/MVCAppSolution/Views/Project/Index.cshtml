@model IEnumerable<BookStoreApp.Models.Project>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Project Id</th>
                <th>Project Name</th>
                <th>Number Of Modules</th>
                <th>Submission Date</th>
                <th>Freelancer Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Project project in Model)
            {
                <tr>
                    <td>@project.ProjectID</td>
                    <td>@project.ProjectName</td>
                    <td>@project.NumberOfModules</td>
                    <td>@project.SubmissionDate.Date.ToString("dd-MM-yyyy")</td>
                    <td>@project.FreelancerName</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@project.ProjectID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Projects found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">